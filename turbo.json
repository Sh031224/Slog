{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"]
    }
  },
  "globalDependencies": [
    ".env",
    "tsconfig.json",
    "$NODE_ENV",
    "$HOST",
    "$USERNAME",
    "$PASSWORD",
    "$DATABASE",
    "$ADMIN_FACEBOOK_ID",
    "$JWT_SECRET"
  ]
}
